{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RDict",
  "version": "1.0.0",
  "identifier": "com.rdict.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "cd ../src && python -m http.server 1420",
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "RDict Configuration",
        "width": 550,
        "height": 650,
        "resizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-close",
            "core:window:allow-set-size",
            "core:window:allow-set-focus",
            "core:window:allow-start-dragging",
            "global-shortcut:allow-register",
            "global-shortcut:allow-unregister",
            "global-shortcut:allow-is-registered",
            "clipboard:allow-read-text",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Dictionary lookup tool",
    "longDescription": "A fast MDX/MDD dictionary lookup tool built with Rust and Tauri",
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "global-shortcut": {
      "shortcuts": []
    }
  }
}
